pipeline {
    agent any
    environment {
        DOCKER_COMPOSE_VERSION = '1.29.2'
    }
    stages {
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                dir('stor') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        
        stage('Linting') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                dir('stor') {
                    sh 'npm run lint'
                }
            }
            post {
                always {
                    junit 'stor/lint-results.xml'
                }
            }
        }
        
        stage('Tests') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                dir('stor') {
                    sh 'npm run test'
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    docker.build('stor', './stor')
                }
            }
        }
        
        stage('Run Docker Containers with Docker Compose') {
            steps {
                sh 'curl -L "https://github.com/docker/compose/releases/download/${DOCKER_COMPOSE_VERSION}/docker-compose-$(uname -s)-$(uname -m)" -o docker-compose'
                sh 'chmod +x docker-compose'
                sh './docker-compose up -d'
            }
        }
        
        stage('Stop Docker Containers with Docker Compose') {
            steps {
                sh './docker-compose down'
            }
        }
    }
    
    post {
        always {
            sh 'docker images -q | xargs docker rmi -f || true'
        }
    }
}
