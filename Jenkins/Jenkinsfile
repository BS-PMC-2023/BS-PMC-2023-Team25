pipeline {
    agent {
        node {
            label 'my-agent-label' // Replace with your Jenkins agent label
            customWorkspace 'BS-PMC-2023-Team25/stor' // Replace with the desired workspace directory
            env.PATH = "${tool 'NodeJS'}/bin:${env.PATH}"
        }
    }
    environment {
        DOCKER_COMPOSE_VERSION = '1.29.2'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                dir('stor') {
                    sh 'npm install'
                }
            }
        }
        
        stage('Link') {
            steps {
                dir('stor') {
                    sh 'npm link'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm run test'
            }
            post {
                always {
                    junit 'stor/reports/**/*.xml'
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    docker.build('stor', './stor')
                }
            }
        }
        
        stage('Run Docker Containers with Docker Compose') {
            steps {
                sh 'curl -L "https://github.com/docker/compose/releases/download/${DOCKER_COMPOSE_VERSION}/docker-compose-$(uname -s)-$(uname -m)" -o docker-compose'
                sh 'chmod +x docker-compose'
                sh './docker-compose up -d'
            }
        }
        
        stage('Stop Docker Containers with Docker Compose') {
            steps {
                sh './docker-compose down'
            }
        }
    }
    
    post {
        always {
            sh 'docker images -q | xargs docker rmi -f || true'
        }
    }
}
