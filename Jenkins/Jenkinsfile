pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                dir('stor') {
                    sh 'npm install'
                }
            }
        }
        
        stage('Linting') {
            steps {
                dir('stor') {
                    sh 'npm run lint'
                }
            }
            post {
                always {
                    junit 'stor/lint-results.xml'
                }
            }
        }
        
        stage('Tests') {
            steps {
                dir('stor') {
                    sh 'npm run test'
                }
            }
            post {
                always {
                    junit 'stor/reports/**/*.xml'
                }
            }
        }
   }     
