pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Add build steps here
                sh 'npm install'
                sh 'npm run build'
            }
        }
        
        stage('Linting') {
            steps {
                // Add linting steps here
                sh 'npm run lint'
            }
        }
        
        stage('Tests') {
            steps {
                // Add test steps here
                sh 'npm run test'
            }
            post {
                always {
                    // Publish test results
                    junit '**/test-results.xml'
                    
                    // Generate code coverage report (adjust as per your setup)
                    jacoco(execPattern: '**/target/*.exec')
                }
            }
        }
    }
    
    post {
        always {
            // Add post-build actions here
            // This block will run after every stage
        }
    }
}
